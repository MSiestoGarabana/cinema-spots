<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Create a new List</h1>

            <hr>

            <form action="/list/create" method="POST">

                <div class="mb-3 row">

                    <div class="mb-3">
                        <label for="name" class="form-label">Name of your list</label>
                        <input type="text" class="form-control" id="name" name="name">
                    </div>

                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">Create list and search movie</button>
                </div>

                {{#if errorMessage}}

                <div id="errorMessage">
                    <p>{{errorMessage}}</p>
                </div>

                {{/if}}

            </form>
        </div>
    </div>

</div>