<div class="container mt5 my-5">
    

    <h2>My lists</h2>
    
    <hr>

    <div class="row">

    {{#each list}}
    <div class="col-md-4">
        <div class="card text-center" style="width: 200px;">

            <div class="card-body">

                <a href="/list/{{_id}}/details">{{name}}</a>

            </div>
        </div>
    </div>
    {{/each}}

</div>
<div class="container mt5 my-5">

    <div class="text-center">
        <a class="btn btn-dark mt-3" href="/">Back to menu</a>

        <a class="btn btn-dark mt-3" href="/list/create">Create a new List</a>
    </div>

</div>