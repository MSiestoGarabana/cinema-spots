<div class="container" id="List__Container--bodyContainer">

    <h2 id="List__title">{{list.name}}</h2>

    <div class="row justify-content-between">
        {{#each list}}
        {{#each movies}}
        <div class="col">
            <form action="/movie/{{this.movie_ID}}" method="POST">
                <a href="/movie/{{this.movie_ID}}" class="col-4 card m-2" id="list__listCard--body"
                    style="background-image: url('https://image.tmdb.org/t/p/original/{{poster_path}}')">
                    <h5 id="list__cardTitle">{{title}}</h5>
                </a>
            </form>
            <form action="/list/delete/{{_id}}/from/{{../_id}}" method="POST">
                <input type="submit" value="Delete this film from {{../name}}" class="btn btn-sm btn-danger"
                    id="listCard__button--delete">
            </form>
        </div>
        {{/each}}
        {{/each}}
    </div>


</div>

<div class="container mt5 my-5">

    <div class="text-center">
        <a class="btn btn-dark mt-3" href="/">Back to menu</a>
    </div>

</div>