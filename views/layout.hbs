<body>

   <nav class="navbar navbar-expand-lg navbar-dark bg-dark">

      <div class="container-fluid">

         <a class="navbar-brand" href="/">{{appTitle}}</a>

         <div class="collapse navbar-collapse" id="navBar__container--navElements">

            <ul class="navbar-nav">

               <li class="nav-item">
                  <a class="nav-link" href="/movie/search">Search movies</a>
               </li>

               <li class="nav-item">
                  <a class="nav-link" href="/user/">Users</a>
               </li>

            </ul>

            <div class="ms-auto d-flex">
               {{#if isLoggedUser}}

               <div class="avatar-container">
                  <img src="{{isLoggedUser.avatar}}" class="rounded-circle" style="width:33px" alt="avatar">
               </div>

               <ul class="navbar-nav">

                  <li class="nav-item dropdown">

                     <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                        aria-expanded="false">Profile</a>

                     <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="/user/{{isLoggedUser._id}}">{{isLoggedUser.name}}</a></li>
                        <li><a class="dropdown-item" href="/list/{{isLoggedUser._id}}">My lists</a></li>
                        <li class="dropdown-item">
                           <form action="/logout" method="POST">
                              <button>Log Out</button>
                           </form>
                        </li>                     
                     </ul>

                  </li>

                  {{else}}

                  <li class="nav-item dropdown">

                     <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">SignUp/LogIn</a>
                  
                     <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="/signup">Sign Up</a></li>
                        <li><a class="dropdown-item" href="/login">Log In</a></li>
                     </ul>

                  </li>

                  {{/if}}

               </ul>

            </div>

         </div>

      </div>

   </nav>

