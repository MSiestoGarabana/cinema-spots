<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Search a movie</h1>
            <hr>
            <form action="/movie/search" method="POST">

                <div class="mb-3">
                    <input required placeholder="Write movie title" type="text" class="form-control" id="title"
                        name="title">
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">Access</button>
                </div>

                {{!-- {{#if errorMessage}}
                <div id="errorMessage">
                    <p>{{errorMessage}}</p>
                </div>
                {{/if}} --}}
            </form>
        </div>
    </div>
</div>